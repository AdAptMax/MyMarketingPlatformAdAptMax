# --------------------------------------------------
# ğŸ FINAL FORM .editorconfig
# Enforces consistent coding styles across editors & IDEs
# Supports full-stack, multi-language, cross-platform projects
# --------------------------------------------------

root = true

#########################
# ğŸ”§ Global Defaults
#########################
[*]
end_of_line = lf                    # Use LF for all systems (Unix-style)
insert_final_newline = true         # Ensure newline at EOF
charset = utf-8                     # Use UTF-8 encoding
trim_trailing_whitespace = true     # Remove trailing whitespace

#########################
# ğŸŒ Web & Frontend
#########################
[*.{js,jsx,ts,tsx,html,css,scss,less}]
indent_style = space
indent_size = 2

#########################
# âš™ï¸ Config & Data Files
#########################
[*.{json,yml,yaml,xml,toml}]
indent_style = space
indent_size = 2

#########################
# ğŸš Shell Scripts
#########################
[*.sh]
indent_style = space
indent_size = 2

#########################
# ğŸ“„ Markdown
#########################
[*.md]
trim_trailing_whitespace = false    # Allow trailing spaces for line breaks

#########################
# ğŸ Python
#########################
[*.py]
indent_style = space
indent_size = 4

#########################
# â˜• Java & Kotlin
#########################
[*.{java,kt}]
indent_style = space
indent_size = 4

#########################
# ğŸ§¬ Go
#########################
[*.go]
indent_style = tab                  # Go prefers tabs

#########################
# ğŸ› ï¸ Makefiles
#########################
[Makefile]
indent_style = tab

#########################
# ğŸ“œ C & C++
#########################
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4

#########################
# ğŸ§± Binary / Compiled Files
#########################
[*.{png,jpg,jpeg,gif,ico,pdf,zip,gz,bz2,7z,rar,tar,exe,dll,o,obj,x,class,jar,war,pyc,pyo}]
indent_style = unset
trim_trailing_whitespace = false
insert_final_newline = false

#########################
# ğŸ§© Project-Specific Overrides (Optional)
#########################
# Example:
# [path/to/file.ext]
# indent_style = space
# indent_size = 2